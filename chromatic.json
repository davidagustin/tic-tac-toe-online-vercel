{
  "projectToken": "YOUR_CHROMATIC_PROJECT_TOKEN",
  "storybookBuildDir": "storybook-static",
  "exitZeroOnChanges": true,
  "autoAcceptChanges": false,
  "onlyChanged": false,
  "untraced": [
    "**/*.map",
    "**/*.css.map",
    "**/node_modules/**"
  ],
  "externals": [
    "**/*.woff",
    "**/*.woff2",
    "**/*.ttf",
    "**/*.eot"
  ],
  "viewport": {
    "width": 1440,
    "height": 900
  },
  "delay": 1000,
  "diffThreshold": 0.1,
  "diffIncludeAntiAliasing": true
} 