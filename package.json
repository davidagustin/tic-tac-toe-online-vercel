{
  "name": "tic-tac-toe-online-vercel",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "NODE_ENV=production node server.js",
    "lint": "next lint",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "chromatic --project-token=YOUR_CHROMATIC_PROJECT_TOKEN",
    "chromatic:test": "npm run build-storybook && chromatic --project-token=YOUR_CHROMATIC_PROJECT_TOKEN --exit-zero-on-changes",
    "chromatic:ci": "npm run build-storybook && chromatic --project-token=$CHROMATIC_PROJECT_TOKEN --exit-zero-on-changes",
    "test:visual": "node scripts/visual-test.js",
    "demo:visual": "node scripts/demo-visual-test.js"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^17.2.0",
    "next": "15.4.2",
    "pg": "^8.11.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@playwright/test": "^1.40.0",
    "@storybook/addon-a11y": "^9.0.17",
    "@storybook/addon-docs": "^9.0.17",
    "@storybook/addon-onboarding": "^9.0.17",
    "@storybook/addon-vitest": "^9.0.17",
    "@storybook/nextjs-vite": "^9.0.17",
    "@storybook/testing-library": "^0.2.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/pg": "^8.10.9",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "chromatic": "^13.1.2",
    "playwright": "^1.54.1",
    "storybook": "^9.0.17",
    "tailwindcss": "^3.4.17",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
